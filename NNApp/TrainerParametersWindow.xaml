<Window x:Class="NNApp.TrainerParametersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NNApp"
        mc:Ignorable="d"
        Style="{StaticResource MetroWindowStyle}"
        Title="TrainerParametersWindow" Height="300" Width="700">
    <Window.Resources>
        <LinearGradientBrush x:Key="GrayBlueGradientBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="Gainsboro" Offset="0" />
            <GradientStop Color="Gainsboro" Offset="0.5" />
            <GradientStop Color="DarkGray" Offset="2" />
        </LinearGradientBrush>
        <Style TargetType="{x:Type Button}">
            <Setter Property="FontSize" Value="10"></Setter>
            <Setter Property="Background" Value="{StaticResource GrayBlueGradientBrush}" />
            <Setter Property="Width" Value="80" />
            <Setter Property="MaxWidth" Value="120" />
            <Setter Property="MaxHeight" Value="40" />
            <Setter Property="Margin" Value="5" />
        </Style>
    </Window.Resources>
    <Grid Background="OliveDrab">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="34" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <TextBlock  Text="Parameters" TextAlignment="Center" FontSize="20" Foreground="White" Name="TopBox2" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="5" Background="Black" MouseLeftButtonDown="TopBox_MouseLeftButtonDown" />

        <Button Margin="0,0,10,0" HorizontalAlignment="Right" Style="{StaticResource ImageButton24x24}" Name="CloseButton" Grid.Column="3" Grid.Row="0"  
                 MaxWidth="32" MaxHeight="24"  MinWidth="24" Click="CloseButton_Click" >
            <Border HorizontalAlignment="Center" VerticalAlignment="Center" >
                <Image Source="Resources/close.ico"/>
            </Border>
        </Button>

        <Button Margin="40,0,0,0" HorizontalAlignment="Center" Style="{StaticResource ImageButton24x24}" Name="MinimizeButton" Grid.Column="3" Grid.Row="0"  
                 MaxWidth="32" MaxHeight="24"  MinWidth="24" Click="MinimizeButton_Click" >
            <Border HorizontalAlignment="Center" VerticalAlignment="Center" >
                <Image Source="Resources/minimize.ico"/>
            </Border>
        </Button>

        <TextBlock Name="MaxLearningRateText" Grid.Column="0" Grid.Row="1" Margin="11,3,11.2,28.2" TextAlignment="Center">Max Learning Rate</TextBlock>
        <TextBox Name="MaxLearningRateBox" Grid.Column="0" Grid.Row="1" Margin="12,22,10.2,10.2">0.2</TextBox>

        <TextBlock Name="MinLearningRateText" Grid.Column="1" Grid.Row="1" Margin="11,3,11.2,28.2" TextAlignment="Center">Min Learning Rate</TextBlock>
        <TextBox Name="MinLearningRateBox" Grid.Column="1" Grid.Row="1" Margin="12,22,10.2,10.2" >0.01</TextBox>

        <TextBlock Name="LambdaMaxText" Grid.Column="2" Grid.Row="1" Margin="10,5,12,26" TextAlignment="Center">Lambda Max</TextBlock>
        <TextBox Name="LambdaMaxBox" Grid.Column="2" Grid.Row="1" Margin="10,22,12,10" >10</TextBox>

        <TextBlock Name="LambdaMinText" Grid.Column="3" Grid.Row="1" Margin="10,5,12,26" TextAlignment="Center">Lambda Min</TextBlock>
        <TextBox Name="LambdaMinBox" Grid.Column="3" Grid.Row="1" Margin="12,22,10,10" >0</TextBox>

        <TextBlock Name="LambdaIterationsText" Grid.Column="4" Grid.Row="1" Margin="10,5,12,26" TextAlignment="Center">Lambda Max Iterations</TextBlock>
        <TextBox Name="LambdaIterationsBox" Grid.Column="4" Grid.Row="1" Margin="10,22,12,10" >500</TextBox>

        <TextBlock Name="MinPotentialText" Grid.Column="3" Grid.Row="2" Margin="10,0,12,32" TextAlignment="Center">Min Potential</TextBlock>
        <TextBox Name="MinPotentialBox" Grid.Column="3" Grid.Row="2" Margin="12,22,10,11" >0.75</TextBox>


        <TextBlock Name="LearningAlgorithmText" Grid.Column="0" Grid.Row="3" Margin="10,0,12,30" TextAlignment="Center" >Learning Algorithm</TextBlock>
        <ComboBox Name="LearningAlgorithmComboBox" Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="1" Margin="11,20,11,11" SelectedIndex="0">
            <ComboBoxItem Name="BackPropagation">Back Propagation</ComboBoxItem>
        </ComboBox>

        <TextBlock Name="ErrorCalculatorText" Grid.Column="1" Grid.Row="3" Margin="12,0,10,30" TextAlignment="Center" >Error Calculator</TextBlock>
        <ComboBox Name="ErrorCalculatorComboBox" Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="1" Margin="12,20,10,11" SelectedIndex="0">
            <ComboBoxItem Name="MeanSquareError">Mean Square Error</ComboBoxItem>
        </ComboBox>

        <TextBlock Name="NeighboursCountText" Grid.Column="2" Grid.Row="2" Margin="10,0,12,31" TextAlignment="Center">Neighbours number</TextBlock>
        <TextBox Name="NeighboursCountBox" Grid.Column="2" Grid.Row="2" Margin="11,22,11,10" >2</TextBox>

        <TextBlock Name="NumberOfNetworksText" Grid.Column="4" Grid.Row="3" Margin="12,3,10,27" TextAlignment="Center">Networks number</TextBlock>
        <TextBox Name="NumberOfNetworksBox" Grid.Column="4" Grid.Row="3" Margin="10,22,12,9" >1</TextBox>

        <TextBlock Name="MomentumText" Grid.Row="2" Margin="0,4,22,28" TextAlignment="Center">Momentum</TextBlock>
        <TextBox Name="MomentumBox" Grid.Row="2" Margin="10,22,12,11">0</TextBox>

        <TextBlock Name="ErrorIncreaseCoefficientText" Grid.Column="1" Grid.Row="2" Margin="10,4,12,28" TextAlignment="Center">Error Incr Coef</TextBlock>
        <TextBox Name="ErrorIncreaseCoefficientBox" Grid.Column="1" Grid.Row="2" Margin="12,22,10,11" >2</TextBox>

        <TextBlock Name="MaxEpochsText" Grid.Column="2" Grid.Row="3" Margin="11,3,11.2,28.2" TextAlignment="Center">Max Epochs</TextBlock>
        <TextBox Name="MaxEpochsBox" Grid.Column="2" Grid.Row="3" Margin="12,20,10,12" >10000</TextBox>

        <TextBlock Name="DesiredMaxErrorText" Grid.Column="3" Grid.Row="3" Margin="11,3,11.2,28.2" TextAlignment="Center">Desired Max Error</TextBlock>
        <TextBox Name="DesiredMaxErrorBox" Grid.Column="3" Grid.Row="3" Margin="12,20,10,12" >0</TextBox>

        <Button Name="SaveButton" Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="1" Click="SaveButton_Click">Save All</Button>
        <Button Name="TrainButton" Grid.Column="2" Grid.Row="4" Grid.ColumnSpan="1" Click="TrainButton_Click">Create Network!</Button>
    </Grid>
</Window>

